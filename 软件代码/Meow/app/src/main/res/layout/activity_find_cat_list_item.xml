<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/find_cat_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--头像+基本信息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!--头像-->
                <ImageView
                    android:id="@+id/find_cat_portrait"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp" />

                <!--基本信息-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--用户名-->
                    <TextView
                        android:id="@+id/find_cat_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:text="name"
                        android:textSize="18dp"
                        android:textStyle="bold"/>

                    <!--发现地点-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:orientation="horizontal">

                        <!--发现地点标题-->
                        <TextView
                            android:id="@+id/tv_loseOrFindPlace"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="发现地点："
                            android:textSize="14dp" />

                        <!--发现地点（具体）-->
                        <TextView
                            android:id="@+id/find_cat_place"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="place"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <!--品种-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <!--品种标题-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="品种："
                            android:textSize="14dp" />

                        <!--具体品种-->
                        <TextView
                            android:id="@+id/find_cat_kind"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="type"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <!--性别-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <!--性别标题-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="性别："
                            android:textSize="14dp" />

                        <!--性别具体-->
                        <TextView
                            android:id="@+id/find_cat_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="sex"
                            android:textSize="14dp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <!--丢失信息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--文字描述-->
                <TextView
                    android:id="@+id/find_cat_decribe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"
                    android:text="谁家的白猫猫啊好可怜~"
                    android:textSize="16dp" />

                <!--图片信息-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/find_cat_photo1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp" />

                    <ImageView
                        android:id="@+id/find_cat_photo2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp" />


                </LinearLayout>
            </LinearLayout>

            <!--联系按钮-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <Button
                    android:id="@+id/find_cat_contact"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="250dp"
                    android:background="@drawable/contact_button"
                    android:textColor="#ffffff"
                    android:textSize="10dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
